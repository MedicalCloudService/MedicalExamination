<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayoutLeftDrawerMenuMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/LinearLayoutLeftDrawerMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="40dp" >

        <RelativeLayout
            android:id="@+id/RelativeLayoutLeftDrawerCalendarMain"
            android:layout_width="match_parent"
            android:layout_height="60dp" >

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayoutLeftDrawerLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/left_menu_item" >

            <ImageView
                android:id="@+id/imageViewLeftDrawerMenuLogin"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_descript"
                android:scaleType="fitXY"
                android:src="@drawable/login" />

            <TextView
                android:id="@+id/textViewLeftDrawerMenuLogin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/login"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30sp" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
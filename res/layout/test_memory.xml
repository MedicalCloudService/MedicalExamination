<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/RelativeLayoutMemoryMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include
            android:id="@+id/subTestAreaHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            layout="@layout/test_area_header" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subTestAreaHeader"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:orientation="horizontal"
            android:rowCount="8"
            android:useDefaultMargins="true" >

            <ImageView
                android:id="@+id/imageViewCard1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="0"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_descript"
                android:scaleType="fitXY"
                android:src="@drawable/love" />

            <ImageView
                android:id="@+id/imageViewCard2"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="0"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_descript"
                android:scaleType="fitXY"
                android:src="@drawable/love" />

            <ImageView
                android:id="@+id/imageViewCard3"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_row="0"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_descript"
                android:scaleType="fitXY"
                android:src="@drawable/love" />

            <ImageView
                android:id="@+id/imageViewCard4"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_descript"
                android:scaleType="fitXY"
                android:src="@drawable/love" />

            <ImageView
                android:id="@+id/imageViewCard5"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_descript"
                android:scaleType="fitXY"
                android:src="@drawable/love" />

            <ImageView
                android:id="@+id/imageViewCard6"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_row="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_descript"
                android:scaleType="fitXY"
                android:src="@drawable/love" />

            <ImageView
                android:id="@+id/imageViewCard7"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="2"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_descript"
                android:scaleType="fitXY"
                android:src="@drawable/love" />

            <ImageView
                android:id="@+id/imageViewCard8"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="2"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_descript"
                android:scaleType="fitXY"
                android:src="@drawable/love" />

            <ImageView
                android:id="@+id/imageViewCard9"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_row="2"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_descript"
                android:scaleType="fitXY"
                android:src="@drawable/love" />
        </GridLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayoutComprehensionMainFinish"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/header_bar" >

            <ImageView
                android:id="@+id/imageViewComprehension1OK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_descript"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ok" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>